<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegrasActivity"
    android:background="@color/colorBackground">

    <TextView
        android:id="@+id/textViewRegras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regras"
        android:textSize="40dp"
        android:textColor="@color/colorLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textViewRegra1"/>

    <TextView
        android:id="@+id/textViewRegra1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="1 - Sed ut perspiciatis, unde omnis iste natus error sit voluptatem accusant doloremque laudantium, totam rem aperiam eaque ipsa, quae ab illo inventore veritatis."
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="20dp"
        app:layout_constraintStart_toStarttOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottonOf="@+id/textViewRegras"
        app:layout_constraintBottom_toTopOf="@+id/textViewRegra2"/>

    <TextView
        android:id="@+id/textViewRegra2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="2 - Sed ut perspiciatis, unde omnis iste natus error sit voluptatem accusant doloremque laudantium, totam rem aperiam eaque ipsa, quae ab illo inventore veritatis."
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="20dp"
        app:layout_constraintStart_toStarttOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottonOf="@+id/textViewRegra1"
        app:layout_constraintBottom_toTopOf="@+id/textViewRegra3"/>

    <TextView
        android:id="@+id/textViewRegra3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="3 - Sed ut error sit voluptatem accusant doloremque laudantium, totam rem aperiam eaque ipsa, quae ab illo inventore veritatis."
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="20dp"
        app:layout_constraintStart_toStarttOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottonOf="@+id/textViewRegra2"
        app:layout_constraintBottom_toTopOf="@+id/buttonJogar" />

    <Button
        android:id="@+id/buttonJogar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Jogar"
        android:layout_marginVertical="20dp"
        android:background="@color/colorButtons"
        android:textColor="@color/colorTextButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottonOf="@+id/textViewRegra3"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>