<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorBackground">

    <ImageView
        android:id="@+id/imageAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textViewBemVindo"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewBemVindo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BEM VINDO USUÁRIO!"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:textColor="@color/colorGreyFaint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageAvatar"
        app:layout_constraintBottom_toTopOf="@+id/textViewMedia" />

    <TextView
        android:id="@+id/textViewMedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Média de acertos: 5.1"
        android:textSize="30dp"
        android:layout_marginBottom="30dp"
        android:textColor="@color/colorGreyStrong"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewBemVindo"
        app:layout_constraintBottom_toTopOf="@+id/buttonCompartilhar" />

    <Button
        android:id="@+id/buttonCompartilhar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/colorButtons"
        android:textColor="@color/colorTextButtons"
        android:text="Compartilhar"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMedia"
        app:layout_constraintBottom_toTopOf="@+id/buttonRegras" />

    <Button
        android:id="@+id/buttonRegras"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/colorButtons"
        android:textColor="@color/colorTextButtons"
        android:text="Regras"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCompartilhar"
        app:layout_constraintBottom_toTopOf="@+id/buttonJogar" />

    <Button
        android:id="@+id/buttonJogar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/colorButtons"
        android:textColor="@color/colorTextButtons"
        android:text="Jogar"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRegras"
        app:layout_constraintBottom_toTopOf="@+id/buttonTimesFavoritos" />

    <Button
        android:id="@+id/buttonTimesFavoritos"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/colorButtons"
        android:textColor="@color/colorTextButtons"
        android:text="Times favoritos"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonJogar"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>